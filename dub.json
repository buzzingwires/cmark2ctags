{
	"name": "cmark2ctags",
	"description": "Convert MarkDown files to Exuberant Ctags using libcmark.",
	"libs": ["cmark"],
	"targetType": "executable",
	"buildTypes": {
		"ldc-production": {
			"dflags": ["-release", "-O2", "-boundscheck=off", "-static"]
		},
		"dmd-production": {
			"dflags": ["-release", "-O", "-boundscheck=off"]
		},
		"ldc-profile": {
			"dflags": ["-g", "-profile", "-release", "-O2", "-boundscheck=off", "-flto=full", "-static"]
		},
		"dmd-profile": {
			"dflags": ["-g", "-profile", "-release", "-O", "-boundscheck=off"]
		},
		"ldc-profile-gc": {
			"dflags": ["-g", "-profile=gc", "-release", "-O2", "-boundscheck=off", "-flto=full", "-static"]
		},
		"dmd-profile-gc": {
			"dflags": ["-g", "-profile=gc", "-release", "-O", "-boundscheck=off"]
		},
		"ldc-coverage": {
			"dflags": ["-g", "-O0", "-static", "-cov"]
		},
		"dmd-coverage": {
			"dflags": ["-g", "-cov"]
		}
	}
}
